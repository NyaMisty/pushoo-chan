{
  "name": "pushoo-chan",
  "version": "0.0.2",
  "scripts": {
    "build": "npx tsc --build tsconfig.json && npx copyfiles src/static/* dist/static/",
    "build:webpack": "npx webpack",
    "lint": "npx eslint . --ext .ts",
    "start": "node -r module-alias/register ./dist/starter/node-http --env=production",
    "start:dev": "nodemon"
  },
  "main": "./dist/bundle.js",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/static"
    ],
    "exec": "npx ts-node -r tsconfig-paths/register ./src/starter/node-http"
  },
  "_moduleAliases": {
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@shims": "dist/shims",
    "@config": "dist/config"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0
    }
  },
  "eslintIgnore": [
    "src/static/",
    "dist",
    "build.ts"
  ],
  "dependencies": {
    "@vespaiach/axios-fetch-adapter": "^0.2.2",
    "basic-auth": "^2.0.1",
    "command-line-args": "^5.2.1",
    "content-type": "^1.0.4",
    "cookie-parser": "^1.4.6",
    "helmet": "^5.0.2",
    "http-encoding": "^1.5.0",
    "http-status-codes": "^2.2.0",
    "iconv-lite": "^0.6.3",
    "itty-router": "^2.6.1",
    "jsonfile": "^6.1.0",
    "mime-types": "^2.1.35",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.1",
    "pushoo": "^0.0.9",
    "yaml": "^2.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.5.1",
    "@types/basic-auth": "^1.1.3",
    "@types/command-line-args": "^5.2.0",
    "@types/content-type": "^1.1.5",
    "@types/cookie-parser": "^1.4.2",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jasmine": "^4.0.3",
    "@types/jsonfile": "^6.1.0",
    "@types/mime-types": "^2.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.24",
    "@types/node-fetch": "^2.6.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.14.0",
    "find": "^0.3.0",
    "fs-extra": "^10.1.0",
    "jasmine": "^4.1.0",
    "nodemon": "^2.0.15",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "types-cloudflare-worker": "^1.2.0",
    "typescript": "^4.6.3",
    "util": "^0.12.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
